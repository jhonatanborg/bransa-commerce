{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:vue/essential",
        "airbnb-base",
        "plugin:prettier/recommended",
        "eslint:recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "parser": "babel-eslint",
        "ecmaVersion": 2019,
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "prettier"
    ],
    "settings": {
        "import/resolver": {
            "alias": {
                "map": [
                    [
                        "@",
                        "./src"
                    ]
                ],
                "extensions": [
                    ".js",
                    ".vue"
                ]
            }
        }
    },
    "rules": {
        "no-console": "warn",
        "prefer-destructuring":"off",
        "no-param-reassign":"off",
        "import/no-named-as-default": "off",
        "import/no-named-as-default-member": "off",
        "prettier/prettier": "error",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "vue": "never"
            }
        ]
    }
}